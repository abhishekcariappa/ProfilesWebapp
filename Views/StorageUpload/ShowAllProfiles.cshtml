@model List<BlobData>
@{
    ViewData["Title"] = "ShowAllProfiles";
}

<h1>ShowAllBlobs</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>FileName</th>
            <th>FileSize</th>
            <th>ModifiedOn</th>
            <th>Download</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model)
        {
            <tr>
                <td>@data.FileName</td>
                <td>@data.FileSize</td>
                <td>@data.ModifiedOn</td>
                <td> <a href="/StorageUpload/Download?blobName=@data.FileName">Download</a> </td>
                <td> <a href="/StorageUpload/Delete?blobName=@data.FileName">Delete</a> </td>
            </tr>
        }
    </tbody>
</table>